@model User


<div class="d-flex justify-content-between align-items-start" style="width:900px">

	<!--Start of header -->

	<div class="header mt-4">
		<div class="title mt-5 mb-4">
			<h2>Settings</h2>
		</div>
		<div id="setting" class="btn-list d-flex">
			<a href="#account" class="btn btn-item active" role="button">My Account</a>
			<a href="#privacy" class="btn btn-item " role="button">Privacy &amp; Safety</a>
		</div>
	</div>
	<!--End of header -->
	<!--Start of Main -->
	<div class="row my-5">
		<div id="account" class="acc-form p-5">
			<form method="post" action="@Url.Action("edit", "setting",new { id = Model.Id })" enctype="multipart/form-data">
				@Html.AntiForgeryToken()
				
				<div class="form-group">
					<label>
						<input type="file" name="photo" style="display: none;">
						@if (Model.Photo == null)
						{
							<img src="~/Public/img/user_male2-512.png" alt="@Model.Name @Model.Surname">
						}
						else
						{
							<img src="~/Uploads/@Model.Photo" alt="@Model.Name @Model.Surname">
						}
					</label>
				</div>
				<div class="d-flex justify-content-between">
					<div class="form-group" style="width: 245px">

						<label for="name">First Name</label>
						<input type="text" id="name" name="name" class="form-control" placeholder="Enter your first name" value="@Model.Name" required maxlength="50">

					</div>
					<div class="form-group " style="width: 240px">
						<label for="surname">Last Name</label>
						<input type="text" id="surname" name="surname" class="form-control" placeholder="Enter your last name" value="@Model.Surname" required maxlength="50">

					</div>
				</div>
				<div class="form-group">
					<label for="email">Email Address</label>
					<input type="text" id="email" name="email" class="form-control" placeholder="Enter your email address" value="@Model.Email" required maxlength="100">

				</div>
				<div class="form-group">
					<label for="position">Job Position</label>
					<input type="text" id="position" name="position" class="form-control" placeholder="What's your job position?" value="@Model.Position" maxlength="50">

				</div>
				<div class="form-group">
					<label for="Biography">Biography</label>
					<textarea id="Biography" name="Biography" class="form-control" rows="3" maxlength="300"
							  placeholder="Tell us a little about yourself">@Model.Biography</textarea>

				</div>
				<button type="submit" class="nav-link btn btn-primary w-100">
					Save Settings
				</button>
			</form>
		</div>
		<div id="privacy" class="acc-form p-5">
				<form class="password-form" method="post" data-id="@Model.Id">
				<div class="form-group">

					<label for="current">Current Password</label>
					<input type="password" id="current" name="current" class="form-control"
		aria-describedby="teamName" placeholder="Enter your current password" required>

				</div>
				<div class="d-flex justify-content-between">
					<div class="form-group" style="width: 245px">

						<label for="new">New Password</label>
						<input type="password" id="new" name="new" class="form-control"
							   aria-describedby="teamName" placeholder="Enter a new password" required>

					</div>
					<div class="form-group" style="width: 240px">
						<label for="confirm">Confirm Password</label>
						<input type="password" id="confirm" name="confirm" class="form-control"
							   aria-describedby="teamName" placeholder="Confirm your new password" required>

					</div>
				</div>
				<button  class="password-submit nav-link btn btn-primary w-100">
					Change Password
				</button>
			</form>
		</div>
	</div>
	<!--End of main -->
</div>